<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="reminder_actions_view_form" model="ir.ui.view">
        <field name="name">reminder.actions.form</field>
        <field name="model">reminder.actions</field>
        <field name="arch" type="xml">
            <form string="Communication">
                <sheet>
                    <group>
                        <field name="task_id"/>
                        <field name="summary"/>
                        <field name="notes"/>
                        <field name="assigned"/>
                        <field name="state"/>
                        <field name="date_deadline"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record id="reminder_actions_view_tree" model="ir.ui.view">
        <field name="name">reminder.actions.tree</field>
        <field name="model">reminder.actions</field>
        <field name="arch" type="xml">
            <tree string="Reminders">
                <field name="task_id"/>

                <field name="summary"/>
                <field name="notes"/>
                <field name="assigned"/>
                <field name="state"/>
                <field name="date_deadline"/>

            </tree>
        </field>
    </record>


</odoo>
